{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": "static/**/*.js",
      "parserOptions": {
        "sourceType": "browser"
      }
    }
  ],
  "rules": {
    "no-console": 0,
    "no-constant-condition": 0,
    "no-undef": 0,
    "no-unused-vars": 0
  }
}
